{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "isolatedModules": false,
    "declaration": false,
    "declarationMap": false,
    "jsx": "react",
    "incremental": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "**/index.test.ts", "**/demo", "coverage", "**/*.js"]
}
